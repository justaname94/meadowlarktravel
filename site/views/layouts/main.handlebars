<!DOCTYPE html>
<html>
  <head>
    <title>Meadowlark Travel</title>
    <!-- Bootstrap -->
    <link rel="stylesheet"
      href="https://maxcdn.bootstrapcdn.com/bootstrap/3.3.7/css/bootstrap.min.css"
      integrity="sha384-BVYiiSIFeK1dGmJRAkycuHAHRg32OmUcww7on3RYdg4Va+PmSTsz/K68vbdEjh4u"
      crossorigin="anonymous">

    {{#if showTests}}
      <link rel="stylesheet" href="/vendor/mocha.css">
    {{/if}}

    {{#each _bundles.css}}
			<link rel="stylesheet" href="{{static .}}">
		{{/each}}
    {{{_sections.head}}}
  </head>
  <body>
  {{#if flash}}
      <div class="alert alert-dismissible alert-{{flash.type}}">
        <button type="button" class="close"
          data-dismiss="alert" aria-hidden="true">close</button>
        <strong>{{flash.intro}}</strong> {{{flash.message}}}
      </div>
    {{/if}}

    <header>
      <img src="{{static '/img/logo.png'}}" alt="Meadowlark Travel Logo">
    </header>

    {{{body}}}

    {{#if showTests}}
      <div id="mocha"></div>
      <script src="{{static '/vendor/mocha.js'}}"></script>
      <script src="{{static '/vendor/chai.js'}}"></script>
      <script>
        mocha.ui('tdd');
        var assert = chai.assert;
      </script>

      <script src="{{static '/qa/global-tests.js'}}"></script>
        {{#if pageTestScript}}
          <script src="{{pageTestScript}}"></script>
        {{/if}}
      <script>mocha.run();</script>
    {{/if}}
    <script
      src="https://code.jquery.com/jquery-3.1.1.min.js"
      integrity="sha256-hVVnYaiADRTO2PzUGmuLJr8BLUSjGIZsDYGmIJLv2b8="
      crossorigin="anonymous">
    </script>
    {{#each _bundles.js.head}}
			<script src="{{static .}}"></script>
		{{/each}}
    {{{_sections.jquery}}}
  </body>
</html>